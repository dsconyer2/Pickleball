{
  "extends": [
    "rxjs-tslint-rules"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer",
    "node_modules/tslint-defocus/dist",
    "tslint-consistent-codestyle",
    "node_modules/tslint-eslint-rules/dist/rules",
    "tslint-microsoft-contrib",
    "tslint-no-focused-test"
  ],
  "rules": {
    "prefer-const": true,
    "object-literal-shorthand": true,
    "object-shorthand-properties-first": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "prefer-array-literal": true,
    "prefer-template": true,
    "no-function-constructor-with-string-args": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "no-parameter-reassignment": true,
    "ter-prefer-arrow-callback": [true],
    "arrow-parens": false,
    "ter-arrow-parens": [
      true,
      "as-needed",
      { "requireForBlockBody": true }
    ],
    "no-duplicate-imports": true,
    "no-boolean-literal-compare": true,
    "brace-style": [
      true,
      "1tbs",
      { "allowSingleLine": true }
    ],
    "no-else-after-return": true,
    "ter-indent": [
      true,
      2,
      { "SwitchCase": 1 }
    ],
    "space-in-parens": [true, "never"],
    "array-bracket-spacing": [true, "never"],
    "object-curly-spacing": [true, "always"],
    "block-spacing": true,
    "ter-computed-property-spacing": true,
    "ter-func-call-spacing": true,
    "function-name": [
      true,
      {
        "function-regex": "^[a-z$][\\w\\d]+$",
        "method-regex": "^[a-z$][\\w\\d]+$",
        "private-method-regex": "^[a-z$][\\w\\d]+$",
        "protected-method-regex": "^[a-z$][\\w\\d]+$",
        "static-method-regex": "^[a-z$][\\w\\d]+$"
      }
    ],
    "no-this-assignment": [true, "allow-destructuring"],
    "rxjs-finnish": {
      "options": [{
        "functions": false,
        "methods": false,
        "parameters": false,
        "properties": false,
        "variables": true
      }],
      "severity": "error"
    },
    "rxjs-no-nested-subscribe": true,
    "rxjs-no-unsafe-takeuntil": true,
    "ordered-imports": [
      true,
      {
        "grouped-imports":true
      }
    ],
    "defocus": true,
    "directive-selector": [true, "attribute", ["cla"], "kebab-case"],
    "component-selector": [true, "element", ["cla"], "kebab-case"],
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "no-host-metadata-property": false,
    "no-attribute-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref" :true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "pipe-prefix": [true, "cla"],
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "import-destructuring-spacing": true,
    "no-access-missing-member": false,
    "member-access": false,
    "member-ordering": [
      true,
      { "order": "statics-first" }
    ],
    "no-any": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-internal-module": true,
    "no-namespace": true,
    "no-reference": true,
    "no-var-requires": false,
    "typedef": false,
    "typedef-whitespace": [
      true, {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }, {
        "call-signature": "space",
        "index-signature": "space",
        "parameter": "space",
        "property-declaration": "space",
        "variable-declaration": "space"
      }
    ],
    "curly": [true, "ignore-same-line"],
    "forin": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": false,
    "no-console": [
      true,
      "log",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": false,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-invalid-this": true,
    "no-null-keyword": false,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "radix": true,
    "switch-default": false,
    "triple-equals": [true, "allow-null-check"],
    "use-isnan": true,
    "eofline": true,
    "indent": [true, "spaces"],
    "max-line-length": [true, 150],
    "no-require-imports": false,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "align": [
      true,
      "arguments",
      "parameters"
    ],
    "class-name": true,
    "comment-format": [true, "check-space"],
    "interface-name": [true, "never-prefix"],
    "jsdoc-format": true,
    "no-angle-bracket-type-assertion": true,
    "no-consecutive-blank-lines": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-finally",
      "check-open-brace",
      "check-whitespace"
    ],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "semicolon": [true, "always"],
    "no-focused-test": true,
    "variable-name": [
      true,
      "check-format",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ]
  }
}
